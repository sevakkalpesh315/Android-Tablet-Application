<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="798dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <WebView
                android:id="@+id/prebootup"
                android:layout_width="800dp"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
           
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               >

                <ImageView
                    android:id="@+id/logotabbie"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:paddingBottom="10dp"
                  
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="624dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:background="@drawable/back_customer"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:text="Hello  "
                            android:textColor="@color/BLACK"
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/txtname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/BLACK"
                            android:textSize="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome To WINGS CAB"
                            android:textColor="@color/BLACK"
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/txttaxi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/BLACK"
                            android:textSize="0dp" />

                        <TextView
                            android:id="@+id/txtroute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/BLACK"
                            android:textSize="0dp" />

                        <TextView
                            android:id="@+id/txtsource"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Mahalaxmi"
                            android:textColor="@color/BLACK"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/BLACK"
                            android:textSize="0dp" />

                        <TextView
                            android:id="@+id/txtdestination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Colaba"
                            android:textColor="@color/BLACK"
                            android:textSize="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="@color/BLACK"
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/txtdriver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Mrs.Krishnan."
                            android:textColor="@color/BLACK"
                            android:textSize="30dp" />
                    </LinearLayout>
                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="127dp"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/welMaps"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:clickable="true"
                            android:paddingTop="20dp"
                            android:src="@drawable/home" />

                        <ImageView
                            android:id="@+id/welNews"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:clickable="true"
                            android:paddingTop="20dp"
                            android:src="@drawable/newz" />

                        <ImageView
                            android:id="@+id/welSports"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:layout_weight="1.0"
                            android:clickable="true"
                            android:paddingTop="20dp"
                            android:src="@drawable/dlf" />

                        <!--
             <ImageView
            android:id="@+id/imageView_channels"
            android:layout_width="450dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:clickable="false"
            android:src="@drawable/logo" />
                        -->

                        <ImageView
                            android:id="@+id/welEntertainment"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:clickable="true"
                            android:paddingTop="20dp"
                            android:src="@drawable/en" />

                        <ImageView
                            android:id="@+id/welShopping"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:layout_weight="1.0"
                            android:clickable="true"
                            android:paddingTop="20dp"
                            android:src="@drawable/shop" />

                        <!--
             <ListView
            android:id="@+id/list"
            android:layout_width="226dp"
            android:layout_height="wrap_content" />
                        -->

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:orientation="vertical" >

                <!--
                             <ImageView
                            android:id="@+id/welClick"
                            android:layout_width="fill_parent"
                            android:layout_height="130dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/exper" />
                -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@color/DarkGreen"
                    android:gravity="center"
                    android:text="Click to experience"
                    android:textColor="@color/WHITE"
                    android:textSize="40dp" 
                     android:id="@+id/startText"/>

                <!--
                    <WebView
                    android:id="@+id/start_app"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"></WebView>
                -->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>